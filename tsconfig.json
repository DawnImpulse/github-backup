{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "dom"
    ],
    "outDir": "dist",
    "removeComments": true,
    "target": "ES2020",
    "module": "CommonJS",
    "sourceRoot": "src",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {},
    "resolveJsonModule": true,
    "sourceMap": true,
    "alwaysStrict": true,
    "noImplicitAny": false,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules/**/*"
  ]
}